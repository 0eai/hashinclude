<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="dismiss">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/white"
        android:clickable="true"
        android:elevation="@dimen/dimen_2dp"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:transitionName="@string/transition_circular_revel">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/tcolor"
                app:popupTheme="@style/AppTheme.PopupOverlay">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/activity_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Add project"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="?actionBarSize"
                android:paddingTop="16dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:visibility="visible"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/project_choosed_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        app:cardBackgroundColor="@color/tcolor"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/project_choose_image"
                            style="@style/Base.Widget.AppCompat.ImageButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tcolor"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_menu_gallery"
                            android:tint="@android:color/white" />
                    </android.support.v7.widget.CardView>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="3dp">
                    <com.balysv.materialripple.MaterialRippleLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="#0000ff"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <ImageButton
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_details"
                                android:tint="@color/tcolor" />
                            <TextView
                                android:id="@+id/project_basic_details_text"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="Basic details"
                                android:textColor="@android:color/black" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"

                            android:layout_marginRight="16dp"
                            android:orientation="vertical"
                            android:paddingBottom="8dp">
                            <TextView
                                android:id="@+id/project_title_Text"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@android:color/transparent"
                                android:text="Title"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/project_title_edittext"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/hint"
                                android:nextFocusLeft="@id/container"
                                android:nextFocusUp="@id/container"
                                android:paddingBottom="8dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="16dp"
                                android:scrollbars="none"
                                android:textColor="@android:color/black" />
                            <!--


                                   -->
                            <TextView
                                android:id="@+id/project_about_text"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="8dp"
                                android:text="About"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/project_about_edittext"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/hint"
                                android:nextFocusLeft="@id/container"
                                android:nextFocusUp="@id/container"
                                android:paddingBottom="8dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="16dp"
                                android:scrollbars="none"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/project_link_text"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_marginTop="8dp"
                                android:text="Project Repo Link"
                                android:textColor="@android:color/black" />

                            <EditText
                                android:id="@+id/project_link_edittext"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/hint"
                                android:nextFocusLeft="@id/container"
                                android:nextFocusUp="@id/container"
                                android:paddingBottom="16dp"
                                android:paddingLeft="8dp"
                                android:paddingTop="16dp"
                                android:scrollbars="none"
                                android:textColor="@android:color/black" />
                        </LinearLayout>
                    </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                </android.support.v7.widget.CardView>

                <!--


                   -->

                <!--


                       -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="3dp">
                    <com.balysv.materialripple.MaterialRippleLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="#0000ff"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="false">
                    <LinearLayout
                        android:id="@+id/project_date_button"
                        style="@style/Base.Widget.AppCompat.ImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="8dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_calendar_range" />

                        <TextView
                            android:id="@+id/project_date_text"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Start date"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/project_display_date_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:gravity="center|right"
                            android:text="10 JAN 2018"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                </android.support.v7.widget.CardView>

                <!--


                   -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp">

                            <ImageButton
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="8dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_group"
                                android:tint="@color/tcolor" />
                            <TextView
                                android:id="@+id/project_add_member_text"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="Add member"
                                android:textColor="@android:color/black" />
                            <ImageButton
                                android:id="@+id/project_add_member_button"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right|center"
                                android:layout_marginRight="16dp"
                                android:background="@drawable/snackbar_shape_background"
                                android:src="@drawable/ic_account_multiple_plus"
                                android:tint="@color/white" />
                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/member_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/delete_button"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Delete"
                    android:textColor="@color/tcolor"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
